{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["index.ts", "src/**/*", "tests"]
}
